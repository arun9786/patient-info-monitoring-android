<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HospitalMedicineDetails">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/hospitalname_medicineDetails"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="#F80404"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textColor="#04177E"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Medicine Details"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/linearlayout_medicinedetails">

                    <TextView
                        android:id="@+id/show_medicinedetails_plus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:textSize="30dp"
                        android:textStyle="bold"
                        android:layout_marginRight="10dp"
                        android:text="-" />


                    <LinearLayout
                        android:id="@+id/linearLayout_medicineDetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="6dp"
                        android:layout_marginBottom="5dp">

                </LinearLayout>



                </LinearLayout>

                <TextView
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textColor="#04177E"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Reports Details"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:layout_marginBottom="13dp"
                    android:background="@drawable/linearlayout_medicinedetails">

                    <TextView
                        android:id="@+id/show_reportdetails_plus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:textSize="30dp"
                        android:textStyle="bold"
                        android:layout_marginRight="10dp"
                        android:text="-" />


                    <LinearLayout
                        android:id="@+id/linearLayout_reportDetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="6dp"
                        android:layout_marginBottom="5dp">

                    </LinearLayout>


                </LinearLayout>



            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>